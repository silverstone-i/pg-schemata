{
  "name": "pg-schemata",
  "version": "0.1.0-beta.1",
  "description": "A lightweight Postgres-first ORM layer built on top of pg-promise",
  "main": "src/index.js",
  "type": "module",
  "files": [
    "src",
    "README.md"
  ],
  "keywords": [
    "postgres",
    "pg-promise",
    "orm",
    "schema",
    "nodejs"
  ],
  "scripts": {
    "docs": "jsdoc -c jsdoc.json README.md && cp LICENSE docs/ && mkdir -p docs/images && cp docs-pages/images/nap-logo.png docs/images/",
    "lint": "eslint .",
    "test": "jest --detectOpenHandles --verbose --coverage",
    "test:unit": "jest tests/unit --detectOpenHandles --verbose --coverage",
    "test:integration": "jest tests/integration",
    "start": "nodemon --delay 5 ./server/app.js"
  },
  "author": "Ian Silverstone",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silverstone-i/pg-schemata.git"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "lodash-es": "^4.17.21",
    "lru-cache": "^11.1.0",
    "pg-promise": "^11.13.0"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.37",
    "chai": "^5.2.0",
    "clean-jsdoc-theme": "^4.3.0",
    "docdash": "github:clenemt/docdash",
    "eslint": "^9.24.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4"
  }
}
